{
	"$schema" : "http://gitlab.dfslab.local/fod/decwaf/-/raw/master/waf16schema.json",
	"policy": {
		"name": "policy-api-arcadia",
		"description": "Arcadia API",
		"template": {
			"name": "POLICY_TEMPLATE_API_SECURITY"
		},
		"enforcementMode": "transparent",
		"open-api-files": [
            {
            	"link": "https://raw.githubusercontent.com/dfs5/decWAF/main/arcadia_policy/openAPI/openapi3-arcadia.yaml"
            }
	    ],
		"policy-builder": {
			"learnOnlyFromNonBotTraffic": false
		},
		"signature-settings": {
			"signatureStaging": false
		},
		"serverTechnologyReference": {
            "link": "https://raw.githubusercontent.com/dfs5/decWAF/main/arcadia_policy/WAFpolicy/signatures/server-technologies.json"
        },
		"signatureSetReference": {
            "link": "https://raw.githubusercontent.com/dfs5/decWAF/main/arcadia_policy/WAFpolicy/signatures/signature-sets.json"
        },
		"responsePageReference": {
			"link": "https://raw.githubusercontent.com/dfs5/decWAF/main/arcadia_policy/WAFpolicy/response-pages/response-pages.json"
		},
		 "methodReference": {
			"link": "https://raw.githubusercontent.com/dfs5/decWAF/main/arcadia_policy/WAFpolicy/compliance/methods.json"
		},
		"filetypeReference": {
			"link": "https://raw.githubusercontent.com/dfs5/decWAF/main/arcadia_policy/WAFpolicy/filetype/filetypes.json"
		},
		"blocking-settings": {
			"violations": [],
			"http-protocols": [
				{
					"description": "Host header contains IP address",
					"enabled": true
				}
			],
			"evasions": [
				{
					"description": "Directory traversals",
					"enabled": true
				}
			]
		},
		"whitelistIpReference": {
		   "link": "https://raw.githubusercontent.com/dfs5/decWAF/main/arcadia_policy/WAFpolicy/ip-exceptions/whitelist-ips.json"
		}
	},
	"modificationsReference": {
			"link": "https://raw.githubusercontent.com/dfs5/decWAF/main/arcadia_policy/WAFpolicy/_modifications/modifications.json"
	}
}
